<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <!-- ユーザー情報 -->
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>

      <!-- 新規投稿フォーム -->
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
     <!-- 全ユーザーの投稿一覧 -->
      <h2>Books</h2>
      <div id="book-list">
        <%= render 'index', books: @books %>
      </div>

    </div>
  </div>
</div>