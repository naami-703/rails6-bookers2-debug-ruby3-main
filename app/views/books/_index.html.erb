<%= link_to '新着順', books_path(latest: "true") %>
<%= link_to 'いいねが多い順', books_path(favorites: "true") %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_user_image(50, 50) %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td>
        <% if book.category.present? %>
          <%= link_to book.category, tagsearches_search_path(content: book.category) %>
        <% end %>
        </td>


        <!-- いいね機能（部分テンプレート・非同期通信 -->
        <!-- 「favorite_buttons_<%= book.id %>」定義内容はfavoritesフォルダのjsファイル参照 -->
        <td id="favorite_btn_<%= book.id %>">
          <%= render "favorites/favorite-btn", book: book %>
        </td>

      <!-- コメント件数・閲覧数 -->
        <td><p>コメント数：<%= book.book_comments.count %></p></td>
        <td><p>閲覧数：<%= book.read_counts.count %></p></td>
      
      <!-- 作成日時-->
        <td><%= book.created_at.strftime('%Y/%m/%d') %></td>
    <% end %>
  </tbody>
</table>